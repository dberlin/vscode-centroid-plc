{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Centroid PLC",
	"patterns": [
		{ 
			"include": "#uservariables"
		},
		{
			"include": "#systemvariables"
		},
		{
			"include": "#assignmentexpr"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#otheroperators"
		},
		{
			"include": "#controlkeywords"
		},
		{
			"include": "#bitopkeywords"
		},
		{
			"include": "#mathkeywords"
		},
		{
			"include": "#basicmathoperators"
		},
		{
			"include": "#relationaloperators"
		},
		{
			"include": "#logicaloperators"
		},
		{
			"include": "#variable"
		},
		{ 
			"include": "#fpnumeric"
		},
		{
			"include": "#integernumeric"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments":{
			"patterns": [{
				"name": "comment.line.semicolon.centroid-plc",
				"match": ";.*$\\n"
			}]
		},
		"datatypes": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b((W|DW|FW|DFW|INP|JPI|MEM|OUT|JPO|STG|FSTG|T|PD|SV_PLC_FUNCTION_|SV_PC_KEYBOARD_KEY_|SV_SKIN_EVENT_|SV_M94_M95_)[0-9]+)\\b"
			}]
		},
		"controlkeywords": {
			"patterns": [{
				"name": "keyword.control.centroid-plc",
				"match": "\\b(IF|THEN|ELSE|JMP)\\b"
			}]
		},
		"bitopkeywords" : {
			"patterns": [{
				"name": "keyword.other.bitops.centroid-plc",
				"match": "\\b(SET|RST|WTB|BTW|BITSET|BITRST|BITTST|LSHIFT|RSHIFT)\\b"
			}]
		},
		"mathkeywords" : {
			"patterns": [{
				"name": "keyword.other.math.centroid-plc",
				"match": "\\b(SIN|COS|ASIN|ACOS|TAN|ABS|POW|SQRT|DIST2|DIST3|ATAN2)\\b"
			}]
		},
		"otheroperators" : {
			"patterns": [{
				"name" : "keyword.other.misc.centroid-plc",
				"match" : "\\b(\\.\\.)\\b"
			}]
		},
		"assignmentexpr" : {
			"patterns": [{
				"name": "meta.expr.assignment",
				"match" : "([a-zA-Z0-9_]+)\\s*(=)[^=]\\s*",
				"captures":{
					"1": {
						"name" : "variable.name.centroid-plc"
					},
					"2": {
						"name" : "keyword.operator.assignment.centroid-plc"
					}
				}
			}]
		},
		"basicmathoperators": {
			"patterns": [{
				"name": "keyword.operator.math.centroid-plc",
				"match": "(\\*|\\/|\\+|\\-|%)"
			}]
		},
		"relationaloperators" :{
			"patterns": [{
				"name": "keyword.operator.relational.centroid-plc",
				"match": "(==|!=|<=|>=|<|>)"
			}]
		},
		"logicaloperators" : {
			"patterns": [{
				"name": "keyword.operator.logical.centroid-plc",
				"match": "(!|\\^|\\|\\||XOR|&&)"
			}]
		},
		"uservariables" : {
			"patterns": [{
				"name": "meta.var.expr",
				"match": "([a-zA-Z0-9_]+)\\s+(IS)\\s+(((?:W|DW|FW|DFW|INP|JPI|MEM|OUT|JPO|STG|FSTG|T|PD|SV_PLC_FUNCTION_|SV_PC_KEYBOARD_KEY_|SV_SKIN_EVENT_|SV_M94_M95_)[0-9]+)|([0-9]+|TRUE|FALSE))",
				"captures": {
					"1" : {"name" : "variable.name.centroid-plc"},
					"2" : {"name" : "keyword.other.centroid-plc"},
					"4" : {"name" : "storage.type.centroid-plc"},
					"5" : {"name" : "constant.numeric.centroid-plc"}				}
			}]
		},
		"systemvariables" : {
			"patterns":[{
				"name": "support.variable.centroid-plc",
				"match": "(SV_MACHINE_PARAMETER_[0-9]+|SV_AXIS_VALID_[0-9]+|SV_AXIS_STATUS_[0-9]+|SV_DRIVE_ONLINE_[0-9]+|MPG_AXIS_[0-9]+)"
			}]
		},
		"variable" : {
			"patterns": [{
				"name" :"variable.name.centroid-plc",
				"match": "([a-zA-z][a-zA-Z0-9_]+)"
			}]
		},
		"integernumeric" : {
			"patterns": [{
				"name": "constant.numeric.centroid-plc",
				"match": "[0-9]+"
			}]
		},
		"fpnumeric" : {
			"patterns": [{
				"name": "constant.numeric.centroid-plc",
				"match": "[0-9]+\\.[0-9]+"
			}]
		},
		"strings": {
			"name": "string.quoted.double.centroid-plc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.centroid-plc",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.centroidplc"
}